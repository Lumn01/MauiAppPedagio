<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPedagio.Views.EditarPedagio"
             Title="{Binding Local}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Local: "/>
            <Entry x:Name="txt_local" Text="{Binding Local}"/>

            <Label Text="Valor: "/>
            <Entry x:Name="txt_valor" Text="{Binding Valor}"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>