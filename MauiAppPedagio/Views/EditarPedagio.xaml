<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPedagio.Views.EditarPedagio"
             Title="{Binding Local}"
             BackgroundColor="#437DD9">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout Margin="20">
            <Label Text="Local: " TextColor="#3BDBB3" FontAttributes="Bold" FontSize="20"/>
            <Entry x:Name="txt_local" Text="{Binding Local}" BackgroundColor="White"/>

            <Label Text="Valor: " TextColor="#3BDBB3" FontAttributes="Bold" FontSize="20"/>
            <Entry x:Name="txt_valor" Text="{Binding Valor}" BackgroundColor="White"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>